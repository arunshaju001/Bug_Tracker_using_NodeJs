<html>
    <head>
        <title>Bug Tracker</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
        <!-- For DataTables -->
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
        

    </head>
    <body>
        <div class="container">
          <br><br>
                <center>
                        <div>
                          <a href="/addBug" class="btn btn-success" role="button">Add new Bug</a>
                        </div>
                </center>
                <h2>Bug List</h2>
                <div class="table-responsive">
                  <table class="table table-hover table-striped" id="myTable">
                    <caption>Bug List</caption>
                  <thead class = "thead bg-success text-white">
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>Time</th>
                      <th>Date</th>
                      <th>Assignee</th>
                      <th>Days Remaining</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% for(var i=0; i<formatedresult.length; i++) {%>
                  <tr
                  <% if(formatedresult[i].remday ==0) { %>
                    class="p-3 mb-2 bg-danger text-white"
                    <% } %>
                  >
                    <td><%= formatedresult[i].title %></td>
                    <td><%= formatedresult[i].desc %></td>
                    <td><%= formatedresult[i].time %></td>
                    <td><%= formatedresult[i].date %></td>
                    <td><%= formatedresult[i].assignee %></td>
                    <td><%= formatedresult[i].remday %></td>
                  </tr>
                <% } %>
                  </tbody>
                  <tfoot class="thead bg-success text-white">
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>Time</th>
                      <th>Date</th>
                      <th>Assignee</th>
                      <th>Days Remaining</th>
                    </tr>
                  </tfoot>
                </table>
                
        <script type="text/javascript" src="../js/update.js"></script>
    </body>
</html>
